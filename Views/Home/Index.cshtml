@model Trang_tin_điện_tử_mvc.Models.HomeIndexViewModel
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = ViewData["Title"] ?? "AGU-News - Tin tức mới nhất";
    var currentSearch = ViewData["CurrentFilter"] as string;
    var currentTag = ViewData["CurrentTag"] as string;
    var currentCategoryId = ViewData["CurrentCategoryId"] as int?;
    var defaultimg = "/uploads/articles/default-thumbnail.jpg";
    bool isFiltered = !string.IsNullOrEmpty(currentSearch) || !string.IsNullOrEmpty(currentTag) || currentCategoryId.HasValue;
}

<style>
    /* --- MAIN LAYOUT STYLES --- */
    .container-main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px 15px;
    }

    /* THREE COLUMN SECTION */
    .three-column-section {
        margin-bottom: 2rem;
    }

    .column-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
        height: 100%;
    }

        .column-card:hover {
            transform: translateY(-5px);
        }

    .column-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .column-content {
        padding: 1rem;
    }

    .column-category {
        color: #cc0000;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
    }

    .column-title {
        font-size: 1.1rem;
        font-weight: 700;
        line-height: 1.3;
        margin-bottom: 0.5rem;
    }

        .column-title a {
            color: #000;
            text-decoration: none;
        }

            .column-title a:hover {
                color: #cc0000;
            }

    .column-meta {
        color: #666;
        font-size: 0.8rem;
    }

    /* RELATED NEWS SECTION */
    .related-news-section {
        margin: 2rem 0;
    }

    .section-header {
        border-bottom: 3px solid #cc0000;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: #000;
        text-transform: uppercase;
        margin: 0;
    }

    /* RELATED ARTICLES WITH IMAGES */
    .related-article {
        display: flex;
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #eee;
    }

        .related-article:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .related-article-image {
        width: 200px;
        height: 120px;
        object-fit: cover;
        border-radius: 6px;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .related-article-content {
        flex: 1;
    }

    .related-article-category {
        color: #cc0000;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin-bottom: 0.3rem;
    }

    .related-article-title {
        font-size: 1.1rem;
        font-weight: 700;
        line-height: 1.3;
        margin-bottom: 0.5rem;
    }

        .related-article-title a {
            color: #000;
            text-decoration: none;
        }

            .related-article-title a:hover {
                color: #cc0000;
            }

    .related-article-summary {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.4;
        margin-bottom: 0.5rem;
    }

    .related-article-meta {
        color: #999;
        font-size: 0.8rem;
    }

    /* SIDEBAR ARTICLES WITHOUT IMAGES */
    .sidebar-section {
        background: #f8f8f8;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .sidebar-title {
        font-size: 1.2rem;
        font-weight: 800;
        color: #000;
        border-bottom: 2px solid #cc0000;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
    }

    .sidebar-article {
        padding: 0.8rem 0;
        border-bottom: 1px solid #e0e0e0;
    }

        .sidebar-article:last-child {
            border-bottom: none;
        }

    .sidebar-article-title {
        font-size: 1rem;
        font-weight: 600;
        line-height: 1.3;
        margin-bottom: 0.3rem;
    }

        .sidebar-article-title a {
            color: #000;
            text-decoration: none;
        }

            .sidebar-article-title a:hover {
                color: #cc0000;
            }

    .sidebar-article-meta {
        color: #666;
        font-size: 0.8rem;
    }

    /* LATEST NEWS SECTION */
    .latest-section {
        margin: 2rem 0;
    }

    .load-more-btn {
        background: #fff;
        border: 2px solid #cc0000;
        color: #cc0000;
        font-weight: 700;
        padding: 0.75rem 2rem;
        border-radius: 25px;
        transition: all 0.3s ease;
        display: block;
        margin: 2rem auto;
    }

        .load-more-btn:hover {
            background: #cc0000;
            color: #fff;
        }

    .no-articles {
        text-align: center;
        padding: 2rem;
        color: #666;
        font-style: italic;
    }
</style>

<div class="container-main">
    @if (!isFiltered)
    {
        <!-- THREE COLUMN FEATURED SECTION -->
        <div class="three-column-section">
            <div class="row">
                @if (Model.FeaturedArticles != null && Model.FeaturedArticles.Any())
                {
                    @foreach (var article in Model.FeaturedArticles.Take(3))
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="column-card">
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                    <img src="@(article.ThumbnailUrl ?? defaultimg)"
                                         onerror="this.onerror=null; this.src='@defaultimg';"
                                         class="column-image"
                                         alt="@article.Title">
                                </a>
                                <div class="column-content">
                                    <div class="column-category">@article.Category?.Name</div>
                                    <h3 class="column-title">
                                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                            @article.Title
                                        </a>
                                    </h3>
                                    <div class="column-meta">
                                        @article.CreatedAt.ToString("dd/MM/yyyy HH:mm") • @article.Author?.FullName
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="no-articles">Chưa có bài viết nổi bật</div>
                    </div>
                }
            </div>
        </div>

        <!-- RELATED NEWS SECTION -->
        <div class="related-news-section">
            <div class="row">
                <!-- Left Column - Articles with Images -->
                <div class="col-lg-8">
                    <div class="section-header">
                        <h2 class="section-title">Thể Thao</h2>
                    </div>

                    @if (Model.BusinessStories != null && Model.BusinessStories.Any())
                    {
                        @foreach (var article in Model.BusinessStories.Take(4))
                        {
                            <div class="related-article">
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                    <img src="@(article.ThumbnailUrl ?? defaultimg)"
                                         onerror="this.onerror=null; this.src='@defaultimg';"
                                         class="related-article-image"
                                         alt="@article.Title">
                                </a>
                                <div class="related-article-content">
                                    <div class="related-article-category">@article.Category?.Name</div>
                                    <h3 class="related-article-title">
                                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                            @article.Title
                                        </a>
                                    </h3>
                                    <p class="related-article-summary">@article.Summary</p>
                                    <div class="related-article-meta">
                                        @article.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-articles">Chưa có bài viết về thể thao</div>
                    }
                </div>

                <!-- Right Column - Articles without Images -->
                <div class="col-lg-4">
                    <!-- Sidebar Articles -->
                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Tin Nổi Bật</h3>
                        @if (Model.SidebarArticles != null && Model.SidebarArticles.Any())
                        {
                            @foreach (var article in Model.SidebarArticles.Take(5))
                            {
                                <div class="sidebar-article">
                                    <h4 class="sidebar-article-title">
                                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                            @article.Title
                                        </a>
                                    </h4>
                                    <div class="sidebar-article-meta">
                                        @article.Category?.Name • @article.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-articles" style="padding: 1rem;">Chưa có tin nổi bật</div>
                        }
                    </div>

                    <!-- Tech Stories -->
                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Công Nghệ</h3>
                        @if (Model.TechStories != null && Model.TechStories.Any())
                        {
                            @foreach (var article in Model.TechStories.Take(5))
                            {
                                <div class="sidebar-article">
                                    <h4 class="sidebar-article-title">
                                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                            @article.Title
                                        </a>
                                    </h4>
                                    <div class="sidebar-article-meta">
                                        @article.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-articles" style="padding: 1rem;">Chưa có tin công nghệ</div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- LATEST NEWS SECTION -->
        <div class="latest-section">
            <div class="section-header">
                <h2 class="section-title">Tin Mới Nhất</h2>
            </div>

            <div id="latest-articles-container">
                @if (Model.LatestArticles != null && Model.LatestArticles.Any())
                {
                    <partial name="_ArticleListPartial" model="Model.LatestArticles" />
                }
                else
                {
                    <div class="no-articles">Chưa có bài viết mới</div>
                }
            </div>          
        </div>
    }
    else
    {
        <!-- FILTERED RESULTS -->
        <div class="section-header">
            <h2 class="section-title">Kết Quả Tìm Kiếm</h2>
        </div>
        <div id="latest-articles-container">
            @if (Model.LatestArticles != null && Model.LatestArticles.Any())
            {
                <partial name="_ArticleListPartial" model="Model.LatestArticles" />
            }
            else
            {
                <div class="no-articles">Không tìm thấy kết quả phù hợp</div>
            }
        </div>
    }
</div>