@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common
@model X.PagedList.IPagedList<Trang_tin_điện_tử_mvc.Models.Article>

@* --- 1. DANH SÁCH BÀI VIẾT (DẠNG 1 CỘT) --- *@
<div class="row g-3">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col-12">
                <div class="card shadow-sm h-100 border-0 mb-3">
                    <div class="row g-0 align-items-center">
                        @* Cột Ảnh bên trái *@
                        <div class="col-md-4 col-lg-3">
                            <a href="/Articles/Details/@item.Id">
                                <img src="@(string.IsNullOrEmpty(item.ThumbnailUrl) ? "/uploads/default.jpg" : item.ThumbnailUrl)"
                                     class="img-fluid rounded-start"
                                     alt="@item.Title"
                                     style="width: 100%; height: 180px; object-fit: cover;"
                                     onerror="this.src='/uploads/articles/default-thumbnail.jpg'">
                            </a>
                        </div>

                        @* Cột Nội dung bên phải *@
                        <div class="col-md-8 col-lg-9">
                            <div class="card-body d-flex flex-column h-100">
                                <h5 class="card-title">
                                    <a href="/Articles/Details/@item.Id" class="text-decoration-none text-dark fw-bold">
                                        @item.Title
                                    </a>
                                </h5>
                                <p class="card-text text-muted mb-2" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                    @item.Summary
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar-event me-1"></i>@(item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                        <span class="mx-2">|</span>
                                        <i class="bi bi-person me-1"></i> @(item.Author?.FullName ?? "Admin")
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center py-5">
            <div class="text-muted">
                <i class="bi bi-search fs-1 d-block mb-3"></i>
                Không tìm thấy bài viết nào phù hợp.
            </div>
        </div>
    }
</div>

@* --- 2. THANH PHÂN TRANG --- *@
@if (Model != null)
{
    <div class="mt-4 pagination-container d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new
            {
                page = page,
                searchString = ViewData["CurrentFilter"],
                currentTag = ViewData["CurrentTag"],
                categoryId = ViewData["CurrentCategoryId"]
            }),
                new PagedListRenderOptions
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" },
        UlElementClasses = new string[] { "pagination" },
        ActiveLiElementClass = "active",

        // Cấu hình hiển thị
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always,
        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
        DisplayLinkToLastPage = PagedListDisplayMode.Always,
        MaximumPageNumbersToDisplay = 5
    })
    </div>
}
