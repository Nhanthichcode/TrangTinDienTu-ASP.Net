@using Microsoft.AspNetCore.Identity
@inject UserManager<Trang_tin_điện_tử_mvc.Models.ApplicationUser> UserManager

<div class="dropdown">
    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-person-circle fs-2 me-2"></i>
        <strong>@UserManager.GetUserName(User)</strong>
    </a>
    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser">
        <li><a class="dropdown-item" asp-controller="Users" asp-area="" asp-action="Details" asp-route-id="@UserManager.GetUserId(User)"><i class="bi bi-person-gear me-2"></i>Thông tin cá nhân</a></li>
        <li><hr class="dropdown-divider"></li>
        <li>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</button>
            </form>
        </li>
    </ul>
</div>