@using Microsoft.AspNetCore.Identity
@using Trang_tin_điện_tử_mvc.Data
@using Trang_tin_điện_tử_mvc.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext DbContext

@{
    // --- LẤY DỮ LIỆU CHO DROPDOWN ---
    // LƯU Ý: Cách tốt nhất là dùng View Component để cache dữ liệu này
    var allCategories = DbContext.Categories.OrderBy(c => c.Name).ToList();
    var allTags = DbContext.Tags.OrderBy(t => t.Name).ToList();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - E-News</title>
 

    @* --- CSS --- *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> @* Giữ lại 1 link Bootstrap CSS *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* --- Styles nội bộ --- *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm fixed-top">
            @* Thêm fixed-top *@
            <div class="container">
                @* Giữ container để căn giữa nội dung navbar *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    📰 E-News
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Articles" asp-action="Index">Tin tức</a>
                        </li>

                        @* --- DROPDOWN CHUYÊN MỤC --- *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Chuyên mục
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                @if (allCategories.Any())
                                {
                                    @foreach (var cat in allCategories)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Articles" asp-action="Index" asp-route-categoryId="@cat.Id">
                                                @cat.Name
                                            </a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li><span class="dropdown-item text-muted">Chưa có chuyên mục</span></li>
                                }                                                              
                            </ul>
                        </li>

                        @* --- DROPDOWN THẺ TAG --- *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="tagsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Thẻ Tag
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="tagsDropdown">
                                @if (allTags.Any())
                                {
                                    @foreach (var tag in allTags)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Articles" asp-action="Index" asp-route-tag="@tag.Name">
                                                @tag.Name
                                            </a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li><span class="dropdown-item text-muted">Chưa có thẻ tag</span></li>
                                }
                                </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Terms">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="GG_map" asp-action="map">Bản đồ</a>
                        </li>
                    </ul>

                    @* --- FORM TÌM KIẾM VÀ KHU VỰC USER --- *@
                    <div class="d-flex align-items-center">
                        <form class="d-flex me-3" asp-area="" asp-controller="Articles" asp-action="Search" method="get">
                            <input class="form-control me-2" type="search" name="query" placeholder="Tìm kiếm...">
                            <button class="btn btn-outline-danger" type="submit"><i class="bi bi-search"></i></button> @* Đổi màu nút và thêm icon *@
                        </form>

                        @* --- PHẦN USER --- *@
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            <div class="dropdown">
                                <a class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    @{
                                        var userAvatar = currentUser.AvatarUrl ?? "/uploads/avatars/default-images.png";
                                    }
                                    <img src="@userAvatar" alt="Avatar" class="rounded-circle me-2" width="24" height="24" onerror="this.onerror=null; this.src='/uploads/avatars/default-images.png';" />
                                    @currentUser.UserName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
 
                                    @* === THÊM LIÊN KẾT DASHBOARD === *@
                                    @if (User.IsInRole("Admin")) // KIỂM TRA ADMIN TRƯỚC
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index">
                                                <i class="bi bi-speedometer2 me-2"></i> Trang quản trị
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    else if (User.IsInRole("Author")) // NẾU KHÔNG PHẢI ADMIN, KIỂM TRA AUTHOR
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="AuthorDashboard" asp-action="Index">
                                                <i class="bi bi-pencil-square me-2"></i> Quản lý bài viết
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }                                                                           
                                        <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Users" asp-area="" asp-action="Details" asp-route-id="@UserManager.GetUserId(User)">
                                                <i class="bi bi-person-gear me-2"></i> Thông tin cá nhân
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>                                                                       
                                    <li>
 
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {                            
 
                            <a class="btn btn-outline-success me-2" asp-area="Identity" asp-page="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                            </a>
                            <a class="btn btn-danger" asp-area="Identity" asp-page="/Account/Register">
                                <i class="bi bi-person-plus me-1"></i> Đăng ký
                            </a>
                        }                       
                    </div>                   
                </div>
            </div>
        </nav>
    </header>

    @* --- NỘI DUNG CHÍNH --- *@
    @* Giữ container thường ở đây để nội dung chính không bị tràn lề quá rộng *@
    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>

    @* --- FOOTER --- *@
    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - <strong>E-News</strong>. Mọi quyền được bảo lưu.</p>
            <p>
                <a asp-controller="Home" asp-area="" asp-action="Privacy">Chính sách bảo mật</a> |
                <a asp-controller="Home" asp-area="" asp-action="Terms">Điều khoản sử dụng</a>
            </p>
        </div>
    </footer>

    @* --- SCRIPTS --- *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> @* Bundle đã bao gồm Popper.js *@
    <script src="~/js/site.js" asp-append-version="true"></script>
 
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>