@model Trang_tin_điện_tử_mvc.Models.Article
@{
    var imageUrl = !string.IsNullOrEmpty(Model.ThumbnailUrl) ? Model.ThumbnailUrl : "/uploads/articles/default-thumbnail.jpg";
}

<style>
    .article-card-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .article-card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
    }
</style>

<div class="card shadow-sm border-0 h-100 article-card-hover">
    <a asp-controller="Articles" asp-action="Details" asp-route-id="@Model.Id">
        <img src="@imageUrl" class="card-img-top" alt="@Model.Title" style="height: 180px; object-fit: cover;"
             onerror="this.onerror=null; this.src='/uploads/articles/default-thumbnail.jpg';">
    </a>
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">
            <a asp-controller="Articles" asp-action="Details" asp-route-id="@Model.Id" class="text-dark text-decoration-none stretched-link">
                @Model.Title
            </a>
        </h5>
        <div class="small text-muted mt-auto pt-2">
            <span><i class="bi bi-clock me-1"></i> @Model.CreatedAt.ToString("dd/MM/yyyy")</span>
        </div>
    </div>
</div>