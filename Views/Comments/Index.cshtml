@model IEnumerable<Trang_tin_điện_tử_mvc.Models.Comment>

@{
    ViewData["Title"] = "Quản lý Bình luận";
    var commentOrderMap = ViewBag.CommentOrderMap as Dictionary<int, int> ?? new Dictionary<int, int>();
    int currentRow = 0;
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="h3 text-primary fw-bold mb-0">
            <i class="bi bi-chat-left-dots-fill me-2"></i>@ViewData["Title"]
            @if (ViewData["FilterTitle"] != null)
            {
                <span class="text-muted fw-normal fs-5">| @ViewData["FilterTitle"]</span>
            }
        </h1>
    </div>

    @* --- ALERT MESSAGES --- *@
    @foreach (var messageType in new[] { "SuccessMessage", "ErrorMessage", "WarningMessage" })
    {
        if (TempData[messageType] != null)
        {
            var alertClass = messageType == "SuccessMessage" ? "success" : (messageType == "ErrorMessage" ? "danger" : "warning");
            var iconClass = messageType == "SuccessMessage" ? "check-circle" : (messageType == "ErrorMessage" ? "exclamation-circle" : "exclamation-triangle");
            <div class="alert alert-@alertClass alert-dismissible fade show d-flex align-items-center shadow-sm" role="alert">
                <i class="bi bi-@iconClass-fill me-2 fs-5"></i>
                <div>@TempData[messageType]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }

    @* --- TABLE CARD --- *@
    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light text-uppercase small fw-bold border-bottom">
                        <tr>
                            <th scope="col" class="text-center py-3" style="width: 60px;">STT</th>
                            <th scope="col" class="py-3" style="width: 35%;">Nội dung</th>
                            <th scope="col" class="py-3" style="width: 15%;">Người dùng</th>
                            <th scope="col" class="py-3" style="width: 20%;">Bài viết</th>
                            <th scope="col" class="py-3" style="width: 120px;">Ngày tạo</th>
                            <th scope="col" class="text-center py-3" style="width: 100px; white-space: nowrap;">Trả lời STT</th>
                            <th scope="col" class="text-center py-3" style="width: 110px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox display-6 d-block mb-3 opacity-50"></i>
                                    Không có bình luận nào để hiển thị.
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            currentRow++;
                            var isReply = item.ParentCommentId.HasValue;
                            <tr>
                                <td class="text-center fw-bold text-secondary">@currentRow</td>
                                <td>
                                    @* Sử dụng text-truncate của Bootstrap để cắt chữ tự động *@
                                    <div class="text-truncate" style="max-width: 300px;" title="@item.Content">
                                        @item.Content
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-circle text-secondary me-2"></i>
                                        <span class="fw-semibold">@(item.User?.UserName ?? "N/A")</span>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Article != null)
                                    {
                                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@item.ArticleId" target="_blank"
                                           class="text-decoration-none text-truncate d-block" style="max-width: 200px;"
                                           title="@item.Article.Title">
                                            <i class="bi bi-journal-text me-1 text-primary"></i>
                                            @item.Article.Title
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted text-truncate d-block" style="max-width: 200px;">
                                            <i class="bi bi-journal-x me-1"></i>ID: @item.ArticleId (Đã xóa)
                                        </span>
                                    }
                                </td>
                                <td class="small text-secondary">
                                    @item.CreatedAt.ToString("dd/MM/yy HH:mm")
                                </td>
                                <td class="text-center">
                                    @if (isReply && item.ParentCommentId.HasValue)
                                    {
                                        if (commentOrderMap.TryGetValue(item.ParentCommentId.Value, out int parentOrder))
                                        {
                                            <span class="badge bg-info text-dark rounded-pill">#@parentOrder</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary rounded-pill" title="Bình luận cha không có trong danh sách này">?</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        @* Sửa lại controller về đúng Comments *@
                                        <a asp-action="Details" asp-controller="Comments" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @* Sử dụng modal xác nhận thay vì link xóa trực tiếp để an toàn hơn *@
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id" title="Xóa bình luận">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>

                                    @* Modal xác nhận xóa (Thêm vào mỗi dòng) *@
                                    <div class="modal fade text-start" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-sm modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header py-2">
                                                    <h6 class="modal-title fw-bold text-danger">Xác nhận xóa</h6>
                                                    <button type="button" class="btn-close small" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body fs-6">
                                                    Bạn có chắc chắn muốn xóa bình luận STT <strong>#@currentRow</strong> không?
                                                </div>
                                                <div class="modal-footer py-1 bg-light">
                                                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                    <form asp-action="Delete" asp-controller="Comments" asp-route-id="@item.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-danger fw-bold">Xóa ngay</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Kích hoạt tooltips của Bootstrap 5
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}