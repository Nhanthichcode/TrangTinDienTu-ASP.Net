@model Trang_tin_điện_tử_mvc.Models.Article
@* LƯU Ý: Nếu bạn đang dùng ViewModel, hãy đổi model ở đây, ví dụ: @model ArticleEditViewModel *@

@{
    bool isAuth = User.Identity.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("Author");
    bool isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin");

    // áp dụng layout dựa trên vai trò người dùng, mặc đinh là layout quản trị nếu là Admin hoặc Author
    if (!isAuth) { Layout = "_Layout"; }
}

<form asp-action="Edit" enctype="multipart/form-data">
    @* Các trường ẩn cần thiết *@
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ThumbnailUrl" />
    <input type="hidden" asp-for="CreatedAt" />

    <div class="row g-4">
        @* CỘT NỘI DUNG CHÍNH (BÊN TRÁI) *@
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-card-text me-2"></i>Nội dung bài viết</h5>
                </div>
                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề bài viết..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Summary" class="form-label"></label>
                        <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Tóm tắt ngắn gọn..."></textarea>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Content" class="form-label fw-bold"></label>       
                        @* 🎯 SỬA QUAN TRỌNG: Thêm hidden field và textarea riêng cho Summernote *@
                        <textarea asp-for="Content" class="form-control" id="content-original" style="display:none;">@Html.Raw(Model.Content)</textarea>
                        <textarea class="form-control" id="content-editor">@Html.Raw(ViewBag.ContentWithImages ?? Model.Content)</textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        @* CỘT THÔNG TIN PHỤ (SIDEBAR BÊN PHẢI) *@
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 2rem;">

                @* Card Hành động & Trạng thái *@
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-gear-fill me-2"></i>Cấu hình & Đăng bài</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                        </div>
                        <hr />
                        @if (isAdmin)
                        {
                            <div class="form-check form-switch">
                                <input class="form-check-input" asp-for="IsApproved" />
                                <label class="form-check-label" asp-for="IsApproved"><b>Đã duyệt</b></label>
                            </div>
                        }
                    </div>
                </div>

                @* Card Ảnh đại diện *@
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-image-fill me-2"></i>Ảnh đại diện</h5>
                    </div>
                    <div class="card-body">
                        <input type="file" name="thumbnailFile" id="thumbnailFile" class="form-control mb-2" accept="image/*" />
                        @{
                            var imageUrl = !string.IsNullOrEmpty(Model.ThumbnailUrl)
                            ? Model.ThumbnailUrl
                            : "/uploads/articles/default-thumbnail.jpg";
                        }
                        <img id="imgPreview"
                             src="@imageUrl"
                             alt="Thumbnail hiện tại"
                             class="img-fluid rounded border"
                             onerror="this.onerror=null; this.src='/uploads/articles/default-thumbnail.jpg';" />
                    </div>
                </div>

                @* Card Phân loại *@
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-folder-fill me-2"></i>Phân loại</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Danh mục</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Thẻ (Tags)</label>
                            <div class="border rounded p-2" style="max-height:150px; overflow-y:auto;">
                                @foreach (var tag in (IEnumerable<Trang_tin_điện_tử_mvc.Models.Tag>)ViewBag.Tags)
                                {
                                    var isChecked = Model.ArticleTags != null && Model.ArticleTags.Any(at => at.TagId == tag.Id);
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="SelectedTagIds" value="@tag.Id" id="tag_@tag.Id" @(isChecked ? "checked" : "") />
                                        <label class="form-check-label" for="tag_@tag.Id">@tag.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.js"></script>

    <style>
        /* 🎯 STYLE CHO ẢNH TRONG SUMMERNOTE EDITOR */
        .note-editable img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin: 1rem 0;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .note-editable img:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
            transition: all 0.3s ease;
        }
    </style>

    <script>
        $(document).ready(function () {

            // 🎯 FUNCTION UPLOAD ẢNH - GỬI articleId THẬT (vì đã có ID)
            function uploadImage(file) {
                var data = new FormData();
                data.append("file", file);
                data.append("articleId", @Model.Id); // 🎯 SỬ DỤNG ID THẬT CỦA BÀI VIẾT

                $.ajax({
                    url: '/Media/Upload',
                    type: 'POST',
                    data: data,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        $('#content-editor').summernote('insertImage', response.url);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.error(textStatus + ": " + errorThrown);
                        alert("Lỗi tải ảnh lên server. Vui lòng thử lại.");
                    }
                });
            }

            // --- KHỞI TẠO SUMMERNOTE ---
            $('#content-editor').summernote({
                placeholder: 'Nhập nội dung bài viết...',
                tabsize: 2,
                height: 400, // 🎯 Tăng chiều cao để dễ làm việc
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ],
                // 🎯 CALLBACK KHI CHÈN ẢNH
                callbacks: {
                    onImageUpload: function (files) {
                        for (var i = 0; i < files.length; i++) {
                            uploadImage(files[i]);
                        }
                    },
                    // 🎯 QUAN TRỌNG: Khi thay đổi nội dung, cập nhật vào hidden field
                    onChange: function(contents) {
                        $('#content-original').val(contents);
                    },
                    // 🎯 Khi khởi tạo xong, cập nhật nội dung ban đầu
                    onInit: function() {
                        $('#content-original').val($('#content-editor').summernote('code'));
                    }
                }
            });

            // 🎯 XỬ LÝ FORM SUBMIT - ĐẢM BẢO LẤY NỘI DUNG TỪ SUMMERNOTE
            $('form').on('submit', function() {
                var summernoteContent = $('#content-editor').summernote('code');
                $('#content-original').val(summernoteContent);
                return true;
            });

            // --- SCRIPT XEM TRƯỚC ẢNH THUMBNAIL ---
            const thumbnailFileInput = document.getElementById('thumbnailFile');
            const imgPreview = document.getElementById('imgPreview');
            const defaultThumbnail = '/uploads/articles/default-thumbnail.jpg';

            if (thumbnailFileInput) {
                thumbnailFileInput.addEventListener('change', function () {
                    const file = this.files[0];
                    if (file) {
                        if (file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            reader.onload = function (e) {
                                imgPreview.src = e.target.result;
                            }
                            reader.readAsDataURL(file);
                        } else {
                            this.value = '';
                            imgPreview.src = defaultThumbnail;
                            alert('Vui lòng chọn một file ảnh hợp lệ (.jpg, .png, .gif...).');
                        }
                    }
                });
            }

            if (imgPreview) {
                imgPreview.onerror = function () {
                    this.onerror = null;
                    this.src = defaultThumbnail;
                };
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}