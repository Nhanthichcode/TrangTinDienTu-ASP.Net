@using Azure.Core
@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.AspNetCore.Identity
@using System.Web
@model Trang_tin_điện_tử_mvc.Models.Article
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = Model.Title;
    // Đã bỏ ViewBag.RelatedArticles ở sidebar, nhưng vẫn giữ cho phần "ĐỌC THÊM" ở cuối
    var relatedArticles = ViewBag.RelatedArticles as List<Article> ?? new List<Article>();
    var currentUserId = UserManager.GetUserId(User);
    ViewData["CurrentUserId"] = currentUserId;
    ViewData["IsUserAdmin"] = User.IsInRole("Admin");

    // Quyền
    bool isUserAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin");
    bool isUserTheAuthor = User.Identity.IsAuthenticated && User.IsInRole("Author") && Model.AuthorId == currentUserId;
    bool isAdminOrAuthorRole = isUserAdmin || (User.Identity.IsAuthenticated && User.IsInRole("Author"));

    var defaultImageUrl = "/uploads/articles/default-thumbnail.jpg";

    if (!isAdminOrAuthorRole) { Layout = "_Layout"; }
}
<style>
    /* --- CÁC STYLE CŨ CỦA BẠN ĐƯỢC GIỮ NGUYÊN --- */
    .article-carousel { margin-top: 3rem; border-top: 2px solid #f0f0f0; padding-top: 2rem; }
    .carousel-image { height: 400px; object-fit: cover; width: 100%; border-radius: 8px; }
    .carousel-caption-custom { background: rgba(0, 0, 0, 0.7); border-radius: 8px; padding: 15px; bottom: 20px; left: 50%; transform: translateX(-50%); width: 90%; }
    .carousel-control-prev, .carousel-control-next { width: 5%; opacity: 0.8; }
    .carousel-control-prev, .carousel-control-next:hover { opacity: 1; }
    .carousel-indicators { bottom: -50px; }
    .carousel-indicators button { width: 10px; height: 10px; border-radius: 50%; margin: 0 5px; background-color: #666; }
    .carousel-indicators .active { background-color: #CC0000; }
    .thumbnail { transition: all 0.3s ease; border: 2px solid transparent; }
    .active-thumbnail { opacity: 1 !important; border-color: #CC0000 !important; transform: scale(1.05); }
    .article-content img { max-width: 100%; height: auto; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin: 1rem 0.5rem; cursor: pointer; transition: all 0.3s ease; }
    .article-content img:hover { transform: scale(1.02); box-shadow: 0 6px 12px rgba(0,0,0,0.15); }
    .article-content figure { margin: 1.5rem 0; text-align: center; }
    .article-content figcaption { font-size: 0.9rem; color: #666; margin-top: 0.5rem; font-style: italic; }
    /*nút quay lại đầu trang*/
    .floating-action-group { position: fixed; bottom: 30px; right: 30px; z-index: 9999; display: flex; flex-direction: column; gap: 10px; }
    .floating-btn { width: 45px; height: 45px; border-radius: 50%; display: flex; justify-content: center; align-items: center; text-decoration: none; font-size: 1.2rem; box-shadow: 0 4px 8px rgba(0,0,0,0.2); transition: all 0.3s ease; }
    .home-btn { background-color: #fff; color: #0d6efd; border: 1px solid #e9ecef; }
    .home-btn:hover { background-color: #0d6efd; color: #fff; transform: translateY(-3px); }
    .top-btn { background-color: #CC0000; color: #fff; opacity: 0; visibility: hidden; transform: translateY(10px); }
    .top-btn:hover { background-color: #990000; color: #fff; transform: translateY(-3px); }
    .top-btn.show { opacity: 1; visibility: visible; transform: translateY(0); }
    /* Style bản tin */
    .cnn-title-wrapper { border-left: 6px solid #CC0000; padding-left: 15px; margin-bottom: 15px; }
    .cnn-title { font-weight: 700; line-height: 1.2; color: #000; font-size: 2.5rem; }
    .cnn-category-label { font-size: 0.75rem; font-weight: 700; color: #666; text-transform: uppercase; margin-bottom: 10px; display: block; }
    .cnn-meta-info { font-size: 0.9rem; color: #666; margin-bottom: 15px; }
    .cnn-author-name { font-weight: 600; color: #000; }
    .cnn-share-buttons .btn-share { width: 32px; height: 32px; border: 1px solid #ddd; border-radius: 4px; display: inline-flex; align-items: center; justify-content: center; color: #333; margin-right: 5px; background: #fff; transition: all 0.2s; }
    .cnn-share-buttons .btn-share:hover { background: #f0f0f0; color: #000; }
    .comment-form textarea:focus { box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25); }
    .comment-item .comment-item { border-bottom: 0 !important; padding-bottom: 0 !important; margin-bottom: 1rem !important; }
    
    /* STYLE CHO CÁC THẺ TAGS MỚI */
    .tags-container {
        margin-top: 3rem; /* Khoảng cách với phần Đọc thêm */
        border-top: 2px solid #f0f0f0;
        padding-top: 1.5rem;
    }
    .tag-link {
        display: inline-block;
        background-color: #f8f9fa;
        color: #6c757d;
        padding: 0.35rem 0.8rem;
        border-radius: 2rem; /* Hình viên thuốc */
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;
        transition: all 0.2s ease;
        border: 1px solid #e9ecef;
    }
    .tag-link:hover {
        background-color: #CC0000; /* Màu đỏ CNN khi hover */
        color: white;
        border-color: #CC0000;
    }

    /* STYLE CHO related-articles-scroll-container (GIỮ NGUYÊN) */
    .related-articles-scroll-container { overflow-x: auto; white-space: nowrap; padding-bottom: 15px; scrollbar-width: thin; }
    .related-article-card { display: inline-block; width: 280px; vertical-align: top; margin-right: 1.5rem; background-color: #fff; border-radius: 0.375rem; box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); white-space: normal; }
    .related-article-img { width: 100%; height: 160px; object-fit: cover; border-top-left-radius: 0.375rem; border-top-right-radius: 0.375rem; }
    .related-article-body { padding: 1rem; }
    .related-article-title { font-size: 1rem; font-weight: 600; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
    
    .toast { background-color: white; border: 1px solid #dee2e6; }
</style>

<div class="floating-action-group">
    <a href="/" class="floating-btn home-btn" title="Về trang chủ">
        <i class="bi bi-house-door-fill"></i>
    </a>
    <a href="javascript:void(0);" id="btn-back-top" class="floating-btn top-btn" title="Lên đầu trang">
        <i class="bi bi-arrow-up"></i>
    </a>
</div>

<div class="container mt-5">
    <div class="row">
        <main class="col-12">
            <article>
                <header class="mb-4 mt-2">
                    <span class="cnn-category-label">
                        <a class="text-decoration-none text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a> >
                        <a asp-controller="Home" asp-action="Index" asp-route-categoryId=" @Model.Category?.Id"
                           class="text-decoration-none text-dark">
                            @Model.Category.Name
                        </a> > 
                        <a class="text-decoration-none text-dark">
                            @Model.Title
                        </a>
                    </span>
                    <div class="cnn-title-wrapper">
                        <h1 class="cnn-title">@Model.Title</h1>
                    </div>
                    <div class="cnn-meta-info">
                        <span class="text-uppercase text-muted fw-bold" style="font-size: 0.8rem;">Updated @Model.CreatedAt.ToString("HH:mm, dd/MM/yyyy")</span>
                        <div class="mt-1">
                            Tác giả <span class="cnn-author-name">
                                <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.Author?.Id"
                                   class="text-decoration-none text-dark">
                                    @(Model.Author?.FullName ?? Model.Author?.UserName ?? "News Staff")
                                </a>
                            </span>
                        </div>
                    </div>
                    <div class="cnn-share-buttons mb-4">
                        <a href="#" class="btn-share"><i class="bi bi-envelope"></i></a>
                        <a href="#" class="btn-share"><i class="bi bi-link-45deg"></i></a>
                        <a href="#" class="btn-share"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="btn-share"><i class="bi bi-facebook"></i></a>
                    </div>
                </header>

                @{
                    var imageUrl = !string.IsNullOrEmpty(Model.ThumbnailUrl) ? Model.ThumbnailUrl : defaultImageUrl;
                }
                <figure class="mb-4">
                    <img src="@imageUrl"
                         class="w-100"
                         alt="@Model.Title"
                         style="height: auto; object-fit: cover; max-height: 500px;"
                         onerror="this.onerror=null; this.src='@defaultImageUrl';" />
                    <figcaption class="figure-caption mt-2 p-2 bg-light border-start border-3 border-danger">
                        Ảnh minh họa: @Model.Title
                    </figcaption>
                </figure>

                <div class="article-content fs-5" style="line-height: 1.8; color: #222;">
                    <p class="lead fw-bold">@Model.Summary</p>
                    @Html.Raw(ViewBag.ContentWithImages)
                </div>

                @if (ViewBag.ArticleImages != null && ViewBag.ArticleImages.Count > 0)
                {
                    <div class="article-carousel">
                        <h4 class="mb-4 border-bottom pb-2">
                            <i class="bi bi-images me-2"></i>Hình ảnh đính kèm (@ViewBag.ArticleImages.Count)
                        </h4>
                        @* --- Carousel HTML giữ nguyên --- *@
                        <div id="articleCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @for (int i = 0; i < ViewBag.ArticleImages.Count; i++)
                                {
                                    <button type="button" data-bs-target="#articleCarousel" data-bs-slide-to="@i"
                                            class="@(i == 0 ? "active" : "")"
                                            aria-label="Slide @(i + 1)"></button>
                                }
                            </div>
                            <div class="carousel-inner rounded">
                                @for (int i = 0; i < ViewBag.ArticleImages.Count; i++)
                                {
                                    var media = ViewBag.ArticleImages[i];
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@media.FileUrl" class="d-block w-100 carousel-image" alt="@media.FileName">
                                        <div class="carousel-caption carousel-caption-custom">
                                            <h6>@media.FileName</h6>
                                            <p class="mb-1">
                                                @media.FileType - @media.FileSizeKB KB<br>
                                                <small>Uploaded: @media.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                            </p>
                                            <div class="d-flex gap-2 justify-content-center">
                                                <button class="btn btn-sm btn-light" onclick="downloadImage('@media.FileUrl')"><i class="bi bi-download"></i> Tải xuống</button>
                                                <button class="btn btn-sm btn-light" onclick="copyUrl('@media.FileUrl')"><i class="bi bi-link-45deg"></i> Copy URL</button>
                                                <button class="btn btn-sm btn-light" onclick="openImageModal('@media.FileUrl')"><i class="bi bi-arrows-fullscreen"></i> Xem lớn</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#articleCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span><span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#articleCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span><span class="visually-hidden">Next</span>
                            </button>
                        </div>

                        @if (ViewBag.ArticleImages.Count > 1)
                        {
                            <div class="row mt-3 g-2">
                                @for (int i = 0; i < ViewBag.ArticleImages.Count; i++)
                                {
                                    var media = ViewBag.ArticleImages[i];
                                    <div class="col-2">
                                        <img src="@media.FileUrl"
                                             class="img-fluid rounded thumbnail @(i == 0 ? "active-thumbnail" : "")"
                                             style="height: 60px; object-fit: cover; cursor: pointer; opacity: 0.6;"
                                             data-bs-target="#articleCarousel" data-bs-slide-to="@i"
                                             onmouseover="this.style.opacity='1'"
                                             onmouseout="if(!this.classList.contains('active-thumbnail')) this.style.opacity='0.6'"
                                             onclick="setActiveThumbnail(this)" title="@media.FileName">
                                    </div>
                                }
                            </div>
                        }
                        @* --- End Carousel HTML --- *@
                    </div>
                }
            </article>

            @if (isUserAdmin || isUserTheAuthor)
            {
                <div class="my-4 p-3 bg-light border rounded">
                    <strong>Quản lý bài viết: </strong>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning ms-2">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Xóa bài?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger ms-1">Xóa</button>
                    </form>
                </div>
            }

            @if (relatedArticles.Any())
            {
                <div class="mt-5">
                    <h4 class="fw-bold mb-3">ĐỌC THÊM</h4>
                    <div class="related-articles-scroll-container">
                        @foreach (var relatedArticle in relatedArticles)
                        {
                            var img = !string.IsNullOrEmpty(relatedArticle.ThumbnailUrl) ? relatedArticle.ThumbnailUrl : defaultImageUrl;
                            <div class="related-article-card">
                                <a asp-action="Details" asp-route-id="@relatedArticle.Id" class="text-decoration-none text-dark">
                                    <img src="@img" class="related-article-img"
                                         onerror="this.onerror=null; this.src='@defaultImageUrl';" />
                                    <div class="related-article-body">
                                        <h6 class="related-article-title">@relatedArticle.Title</h6>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.ArticleTags != null && Model.ArticleTags.Any())
            {
                <div class="tags-container">
                    <h6 class="fw-bold text-uppercase mb-3 text-muted" style="font-size: 0.9rem;">
                        <i class="bi bi-tags-fill me-2"></i>Chủ đề liên quan
                    </h6>
                    <div class="d-flex flex-wrap">
                        @foreach (var at in Model.ArticleTags)
                        {
                            @if (at.Tag != null)
                            {
                                <a asp-controller="Home" asp-action="Index" asp-route-tag="@at.Tag.Name" class="tag-link">
                                    #@at.Tag.Name
                                </a>
                            }
                        }
                    </div>
                </div>
            }
            <div class="mt-5 mb-5" id="comment-section">
                <h4 class="mb-4 fw-bold border-bottom pb-2">Bình luận (@(Model.Comments?.Count ?? 0))</h4>

                @if (SignInManager.IsSignedIn(User))
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    var userAvatarUrl = currentUser?.AvatarUrl ?? "/uploads/avatars/default-images.png";
                    <form asp-action="AddComment" asp-controller="Articles" method="post" class="mb-5 comment-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ArticleId" value="@Model.Id" />
                        <div class="d-flex gap-3">
                            <img src="@userAvatarUrl" class="rounded-circle" width="50" height="50" style="object-fit: cover;"
                                 onerror="this.onerror=null; this.src='@defaultImageUrl';" />
                            <div class="flex-grow-1">
                                <textarea name="Content" class="form-control" rows="3" placeholder="Ý kiến của bạn..." required></textarea>
                                <button type="submit" class="btn btn-dark mt-2">Gửi bình luận</button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-light border">Vui lòng <a asp-area="Identity" asp-page="/Account/Login">đăng nhập</a> để bình luận.</div>
                }

                @if (Model.Comments != null && Model.Comments.Any())
                {
                    <div class="comment-list">
                        @foreach (var comment in Model.Comments.Where(c => c.ParentCommentId == null).OrderByDescending(c => c.CreatedAt))
                        {
                            <partial name="_CommentPartial" model="comment" view-data="ViewData" />
                        }
                    </div>
                }
            </div>
        </main>
        
        </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xem ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="" class="img-fluid" style="max-height: 70vh;" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="downloadImage(document.getElementById('modalImage').src)">
                    <i class="bi bi-download me-1"></i> Tải xuống
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* --- Phần Scripts JS giữ nguyên --- *@
    <script>
        $(document).ready(function () {
            var $btnTop = $('#btn-back-top');
            $(window).scroll(function () {
                if ($(window).scrollTop() > 300) { $btnTop.addClass('show'); } else { $btnTop.removeClass('show'); }
            });
            $btnTop.click(function (e) {
                e.preventDefault();
                $('html, body').animate({ scrollTop: 0 }, 400);
            });
            $('#articleCarousel').on('slide.bs.carousel', function (e) {
                $('.thumbnail').removeClass('active-thumbnail').css('opacity', '0.6');
                $('.thumbnail[data-bs-slide-to="' + e.to + '"]').addClass('active-thumbnail').css('opacity', '1');
            });
            $('.thumbnail').click(function () {
                var slideTo = $(this).data('bs-slide-to');
                $('#articleCarousel').carousel(parseInt(slideTo));
            });
            $(document).on('click', '.btn-edit-comment', function () {
                var $item = $(this).closest('.comment-item');
                $item.find('.comment-content-display:first').hide();
                $item.find('.comment-actions:first').hide();
                $item.find('.comment-content-edit:first').show();
            });
            $(document).on('click', '.btn-cancel-edit', function () {
                var $item = $(this).closest('.comment-item');
                $item.find('.comment-content-display:first').show();
                $item.find('.comment-actions:first').show();
                $item.find('.comment-content-edit:first').hide();
            });
            $(document).on('click', '.btn-toggle-reply', function () {
                $(this).closest('.comment-item').find('.reply-form-container:first').toggle();
            });
            $(document).on('click', '.btn-cancel-reply', function () {
                $(this).closest('.reply-form-container').hide();
            });
            $(document).on('click', '.article-content img', function () {
                var imageUrl = $(this).attr('src');
                openImageModal(imageUrl);
            });
        });
        function setActiveThumbnail(element) {
            $('.thumbnail').removeClass('active-thumbnail').css('opacity', '0.6');
            $(element).addClass('active-thumbnail').css('opacity', '1');
        }
        function openImageModal(imageUrl) {
            document.getElementById('modalImage').src = imageUrl;
            var imageModal = new bootstrap.Modal(document.getElementById('imageModal'));
            imageModal.show();
        }
        function downloadImage(imageUrl) {
            var fileName = imageUrl.split('/').pop() || 'image.jpg';
            var a = document.createElement('a');
            a.href = imageUrl;
            a.download = fileName;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            showDownloadNotification(fileName);
        }
        function copyUrl(url) {
            navigator.clipboard.writeText(url).then(function () {
                showCopyNotification();
            });
        }
        function showDownloadNotification(fileName) {
            const toast = document.createElement('div');
            toast.className = 'position-fixed bottom-0 end-0 p-3';
            toast.style.zIndex = '9999';
            toast.innerHTML = `<div class="toast show" role="alert"><div class="toast-header"><i class="bi bi-download text-success me-2"></i><strong class="me-auto">Tải xuống</strong><button type="button" class="btn-close" data-bs-dismiss="toast"></button></div><div class="toast-body">Đang tải: <strong>${fileName}</strong></div></div>`;
            document.body.appendChild(toast);
            setTimeout(() => { document.body.removeChild(toast); }, 3000);
        }
        function showCopyNotification() {
            const toast = document.createElement('div');
            toast.className = 'position-fixed bottom-0 end-0 p-3';
            toast.style.zIndex = '9999';
            toast.innerHTML = `<div class="toast show" role="alert"><div class="toast-header"><i class="bi bi-check-circle text-success me-2"></i><strong class="me-auto">Thành công</strong><button type="button" class="btn-close" data-bs-dismiss="toast"></button></div><div class="toast-body">Đã copy URL vào clipboard</div></div>`;
            document.body.appendChild(toast);
            setTimeout(() => { document.body.removeChild(toast); }, 2000);
        }
    </script>
}