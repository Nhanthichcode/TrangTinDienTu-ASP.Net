@using Azure.Core
@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.AspNetCore.Identity
@using System.Web
@model Trang_tin_điện_tử_mvc.Models.Article
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = Model.Title;
    var relatedArticles = ViewBag.RelatedArticles as List<Article> ?? new List<Article>();
    var currentUserId = UserManager.GetUserId(User);
    ViewData["CurrentUserId"] = currentUserId;
    ViewData["IsUserAdmin"] = User.IsInRole("Admin");

    // Quyền
    bool isUserAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin");
    bool isUserTheAuthor = User.Identity.IsAuthenticated && User.IsInRole("Author") && Model.AuthorId == currentUserId;
    bool isAdminOrAuthorRole = isUserAdmin || (User.Identity.IsAuthenticated && User.IsInRole("Author"));

    var defaultImageUrl = "/uploads/articles/default-thumbnail.jpg";

    if (!isAdminOrAuthorRole) { Layout = "_Layout"; }
}
<style>
    /*nút quay lại đầu trang*/ 
    /* Khung chứa nhóm nút */
    .floating-action-group {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 9999;
        display: flex;
        flex-direction: column; /* Xếp dọc */
        gap: 10px; /* Khoảng cách giữa 2 nút */
    }

    /* Style chung cho các nút */
    .floating-btn {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        font-size: 1.2rem;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }

    /* Style riêng cho nút Home (Màu xanh hoặc trắng) */
    .home-btn {
        background-color: #fff;
        color: #0d6efd; /* Màu xanh bootstrap */
        border: 1px solid #e9ecef;
    }

        .home-btn:hover {
            background-color: #0d6efd;
            color: #fff;
            transform: translateY(-3px);
        }

    /* Style riêng cho nút Top (Màu đỏ hoặc tối) */
    .top-btn {
        background-color: #CC0000; /* Màu đỏ CNN */
        color: #fff;
        opacity: 0; /* Mặc định ẩn */
        visibility: hidden;
        transform: translateY(10px);
    }

        .top-btn:hover {
            background-color: #990000;
            color: #fff;
            transform: translateY(-3px);
        }

        /* Class hiển thị nút Top */
        .top-btn.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        // Style bản tin

        /* 1. Thanh đỏ bên trái tiêu đề */
        .cnn-title-wrapper {
            border-left: 6px solid #CC0000; /* Màu đỏ đặc trưng CNN */
            padding-left: 15px;
            margin-bottom: 15px;
        }

        .cnn-title {
            font-weight: 700; /* Chữ đậm */
            line-height: 1.2;
            color: #000;
            font-size: 2.5rem;
        }

        /* 2. Breadcrumb nhỏ phía trên (WORLD > ASIA) */
        .cnn-category-label {
            font-size: 0.75rem;
            font-weight: 700;
            color: #666;
            text-transform: uppercase;
            margin-bottom: 10px;
            display: block;
        }

        /* 3. Thông tin tác giả & thời gian */
        .cnn-meta-info {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 15px;
        }

        .cnn-author-name {
            font-weight: 600;
            color: #000;
        }

        /* 4. Nút chia sẻ mạng xã hội (Tròn/Vuông nhỏ) */
        .cnn-share-buttons .btn-share {
            width: 32px;
            height: 32px;
            border: 1px solid #ddd;
            border-radius: 4px; /* Bo góc nhẹ giống hình */
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: #333;
            margin-right: 5px;
            background: #fff;
            transition: all 0.2s;
        }

            .cnn-share-buttons .btn-share:hover {
                background: #f0f0f0;
                color: #000;
            }

        /* Style cũ của bạn cho comment/related */
        .comment-form textarea:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .comment-item .comment-item {
            border-bottom: 0 !important;
            padding-bottom: 0 !important;
            margin-bottom: 1rem !important;
        }

        .related-articles-scroll-container {
            overflow-x: auto;
            white-space: nowrap;
            padding-bottom: 15px;
            scrollbar-width: thin;
        }

        .related-article-card {
            display: inline-block;
            width: 280px;
            vertical-align: top;
            margin-right: 1.5rem;
            background-color: #fff;
            border-radius: 0.375rem;
            box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
            white-space: normal;
        }

        .related-article-img {
            width: 100%;
            height: 160px;
            object-fit: cover;
            border-top-left-radius: 0.375rem;
            border-top-right-radius: 0.375rem;
        }

        .related-article-body {
            padding: 1rem;
        }

        .related-article-title {
            font-size: 1rem;
            font-weight: 600;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
<div class="floating-action-group">

    <a href="/" class="floating-btn home-btn" title="Về trang chủ">
        <i class="bi bi-house-door-fill"></i>
    </a>

    <a href="javascript:void(0);" id="btn-back-top" class="floating-btn top-btn" title="Lên đầu trang">
        <i class="bi bi-arrow-up"></i>
    </a>

</div>
<div class="container mt-4">
    @* Dùng container thay vì fluid để gom gọn giống báo *@
    <div class="row g-5">
        @* Tăng khoảng cách g-5 *@

        @* --- CỘT NỘI DUNG CHÍNH --- *@
        <main class="col-lg-8">
            @* Giảm xuống col-8 để sidebar rộng hơn chút *@
            <article>

                @* 1. HEADER BÀI VIẾT (KIỂU CNN) *@
                <header class="mb-4">

                    @* Breadcrumb: Category *@
                    <span class="cnn-category-label">
                        News > @(Model.Category?.Name ?? "General") > @Model.CreatedAt.ToString("dd/MM")
                    </span>

                    @* Tiêu đề với thanh đỏ *@
                    <div class="cnn-title-wrapper">
                        <h1 class="cnn-title">@Model.Title</h1>
                    </div>

                    @* Metadata: Tác giả & Ngày *@
                    <div class="cnn-meta-info">
                        <span class="text-uppercase text-muted fw-bold" style="font-size: 0.8rem;">Updated @Model.CreatedAt.ToString("HH:mm, dd/MM/yyyy")</span>
                        <div class="mt-1">
                            By <span class="cnn-author-name">@(Model.Author?.FullName ?? Model.Author?.UserName ?? "News Staff")</span>
                        </div>
                    </div>

                    @* Các nút Share nhỏ *@
                    <div class="cnn-share-buttons mb-4">
                        <a href="#" class="btn-share"><i class="bi bi-envelope"></i></a>
                        <a href="#" class="btn-share"><i class="bi bi-link-45deg"></i></a>
                        <a href="#" class="btn-share"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="btn-share"><i class="bi bi-facebook"></i></a>
                    </div>
                </header>

                @* 2. ẢNH ĐẠI DIỆN (Giờ mới hiển thị ảnh) *@
                @{
                    var imageUrl = !string.IsNullOrEmpty(Model.ThumbnailUrl) ? Model.ThumbnailUrl : defaultImageUrl;
                }
                <figure class="mb-4">
                    <img src="@imageUrl"
                         class="w-100"
                         alt="@Model.Title"
                         style="height: auto; object-fit: cover; max-height: 500px;"
                         onerror="this.onerror=null; this.src='@defaultImageUrl';" />
                    @* Caption ảnh nếu có (giả lập) *@
                    <figcaption class="figure-caption mt-2 p-2 bg-light border-start border-3 border-danger">
                        Ảnh minh họa: @Model.Title
                    </figcaption>
                </figure>

                @* 3. NỘI DUNG BÀI VIẾT *@
                <div class="article-content fs-5" style="line-height: 1.8; color: #222;">
                    <p class="lead fw-bold">@Model.Summary</p> @Html.Raw(Model.Content)
                </div>

            </article>

            @* --- CÁC PHẦN CŨ (Bình luận, ...) GIỮ NGUYÊN --- *@

            @* (Nếu Admin/Author thì hiện nút hành động ở đây cho tiện) *@
            @if (isUserAdmin || isUserTheAuthor)
            {
                <div class="my-4 p-3 bg-light border rounded">
                    <strong>Quản lý bài viết: </strong>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning ms-2">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Xóa bài?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger ms-1">Xóa</button>
                    </form>
                </div>
            }

            @* Khu vực Bình luận *@
            <div class="mt-5" id="comment-section">
                <h4 class="mb-4 fw-bold border-bottom pb-2">Bình luận (@(Model.Comments?.Count ?? 0))</h4>

                @* Form gửi bình luận *@
                @if (SignInManager.IsSignedIn(User))
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    var userAvatarUrl = currentUser?.AvatarUrl ?? "/uploads/avatars/default-images.png";
                    <form asp-action="AddComment" asp-controller="Articles" method="post" class="mb-5 comment-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ArticleId" value="@Model.Id" />
                        <div class="d-flex gap-3">
                            <img src="@userAvatarUrl" class="rounded-circle" width="50" height="50" style="object-fit: cover;"
                                 onerror="this.onerror=null; this.src='@defaultImageUrl';" />
                            <div class="flex-grow-1">
                                <textarea name="Content" class="form-control" rows="3" placeholder="Ý kiến của bạn..." required></textarea>
                                <button type="submit" class="btn btn-dark mt-2">Gửi bình luận</button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-light border">Vui lòng <a asp-area="Identity" asp-page="/Account/Login">đăng nhập</a> để bình luận.</div>
                }

                @* Danh sách bình luận *@
                @if (Model.Comments != null && Model.Comments.Any())
                {
                    <div class="comment-list">
                        @foreach (var comment in Model.Comments.Where(c => c.ParentCommentId == null).OrderByDescending(c => c.CreatedAt))
                        {
                            <partial name="_CommentPartial" model="comment" view-data="ViewData" />
                        }
                    </div>
                }
            </div>
        </main>

        @* --- SIDEBAR (GIỮ NGUYÊN LOGIC CŨ) --- *@
        <aside class="col-lg-4">
            <div class="sticky-top" style="top: 2rem;">

                @* Có thể thêm mục "Tin nổi bật" ở đây *@
                @if (relatedArticles.Any())
                {
                    <h5 class="fw-bold text-danger border-bottom border-danger pb-2 mb-3">TIN LIÊN QUAN</h5>
                    <div class="d-flex flex-column gap-3 mb-4">
                        @foreach (var item in relatedArticles.Take(4)) // Lấy 4 tin dọc
                        {
                            var img = !string.IsNullOrEmpty(item.ThumbnailUrl) ? item.ThumbnailUrl : defaultImageUrl;
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" style="flex-shrink: 0; width: 100px;">
                                    <img src="@img" class="rounded" style="width: 100%; height: 70px; object-fit: cover;"
                                         onerror="this.onerror=null; this.src='@defaultImageUrl';">
                                </a>
                                <div>
                                    <h6 class="mb-1" style="font-size: 0.95rem;">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark fw-bold">@item.Title</a>
                                    </h6>
                                    <small class="text-muted">@item.CreatedAt.ToString("dd/MM")</small>
                                </div>
                            </div>
                        }
                    </div>
                }

                @* Thẻ Tags *@
                <div class="card border-0 bg-light mb-4">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Tags</h6>
                        @if (Model.ArticleTags != null && Model.ArticleTags.Any())
                        {
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var at in Model.ArticleTags)
                                {
                                    <a asp-controller ="Home" asp-action="Index" asp-route-tag="@at.Tag?.Name" class="btn btn-sm btn-outline-secondary rounded-pill">#@at.Tag?.Name</a>
                                }
                            </div>
                        }
                    </div>
                </div>

            </div>
        </aside>
    </div>

    @* "Có thể bạn quan tâm" (Ngang bên dưới - nếu cần giữ lại) *@
    @if (relatedArticles.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <h4 class="fw-bold mb-3">ĐỌC THÊM</h4>
                <div class="related-articles-scroll-container">
                    @foreach (var relatedArticle in relatedArticles)
                    {
                        var img = !string.IsNullOrEmpty(relatedArticle.ThumbnailUrl) ? relatedArticle.ThumbnailUrl : defaultImageUrl;
                        <div class="related-article-card">
                            <a asp-action="Details" asp-route-id="@relatedArticle.Id" class="text-decoration-none text-dark">
                                <img src="@img" class="related-article-img"
                                     onerror="this.onerror=null; this.src='@defaultImageUrl';" />
                                <div class="related-article-body">
                                    <h6 class="related-article-title">@relatedArticle.Title</h6>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var $btnTop = $('#btn-back-top');

            // 1. Sự kiện cuộn chuột để ẩn/hiện nút Top
            $(window).scroll(function () {
                if ($(window).scrollTop() > 300) {
                    $btnTop.addClass('show');
                } else {
                    $btnTop.removeClass('show');
                }
            });

            // 2. Bấm nút Top -> Cuộn mượt lên đầu
            $btnTop.click(function (e) {
                e.preventDefault();
                $('html, body').animate({ scrollTop: 0 }, 400);
            });
            // 1. Xử lý nút "Sửa"
            $(document).on('click', '.btn-edit-comment', function () {
                // Tìm thẻ cha gần nhất (li.comment-item) để khoanh vùng xử lý
                var $item = $(this).closest('.comment-item');

                // Ẩn nội dung hiển thị gốc và các nút hành động (Sửa/Xóa/Trả lời)
                // Dùng :first để tránh ẩn nhầm của các bình luận con lồng bên trong
                $item.find('.comment-content-display:first').hide();
                $item.find('.comment-actions:first').hide();

                // Hiện form sửa
                $item.find('.comment-content-edit:first').show();
            });

            // 2. Xử lý nút "Hủy" (khi đang Sửa)
            $(document).on('click', '.btn-cancel-edit', function () {
                var $item = $(this).closest('.comment-item');

                // Hiện lại nội dung gốc
                $item.find('.comment-content-display:first').show();
                $item.find('.comment-actions:first').show();

                // Ẩn form sửa đi
                $item.find('.comment-content-edit:first').hide();
            });

            // 3. Xử lý nút "Trả lời"
            $(document).on('click', '.btn-toggle-reply', function () {
                // Tìm form trả lời ngay bên dưới và bật/tắt nó
                $(this).closest('.comment-item').find('.reply-form-container:first').toggle();
            });

            // 4. Xử lý nút "Hủy" (khi đang Trả lời)
            $(document).on('click', '.btn-cancel-reply', function () {
                $(this).closest('.reply-form-container').hide();
            });
        });
