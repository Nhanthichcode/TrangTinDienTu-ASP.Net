@model Trang_tin_điện_tử_mvc.Models.ArticleCreateViewModel

@{
    bool isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("Author");

    // áp dụng layout dựa trên vai trò người dùng, mặc đinh là layout quản trị nếu là Admin hoặc Author
    if (!isAdmin) { Layout = "_Layout"; }


    ViewData["Title"] = "Tạo bài viết mới";
}

<h2 class="mb-4 text-primary">📝 Tạo bài viết mới</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết..." />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Summary" class="form-label"></label>
        <textarea asp-for="Summary" class="form-control" rows="2" placeholder="Tóm tắt ngắn gọn..."></textarea>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label fw-bold"></label>       
        <textarea asp-for="Content" class="form-control" id="content-editor"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Ảnh đại diện</label>

        @* Quan trọng: Thêm id="thumbnailFile" vào đây *@
        <input type="file" id="thumbnailFile" name="thumbnailFile" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Chọn ảnh minh họa cho bài viết (tùy chọn, tối đa 2MB)</small>

        @* QUAN TRỌNG: Bổ sung các thẻ div, img, p mà JavaScript cần *@
        <div id="previewContainer" class="mt-2" style="display:none;">
            <img id="imgPreview" src="#" alt="Preview" class="img-thumbnail" style="max-height:200px;" />
            <p id="fileInfo" class="mt-1"></p>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryId" class="form-label">Danh mục</label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Thẻ (Tags)</label>
        <div class="border rounded p-2" style="max-height:180px; overflow-y:auto;">
            @foreach (var tag in (IEnumerable<Trang_tin_điện_tử_mvc.Models.Tag>)ViewBag.Tags)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedTagIds" value="@tag.Id" id="tag_@tag.Id" />
                    <label class="form-check-label" for="tag_@tag.Id">@tag.Name</label>
                </div>
            }
        </div>
        <small class="form-text text-muted">Chọn một hoặc nhiều thẻ phù hợp với bài viết.</small>
    </div>

    <button type="submit" class="btn btn-success px-4">
        <i class="bi bi-check-circle"></i> Lưu bài viết
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</form>
@section Scripts {
  <link href="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.js"></script>
    
    <script>
       $(document).ready(function () {
            
            // --- 1. KHỞI TẠO SUMMERNOTE ---
            $('#content-editor').summernote({
                placeholder: 'Nhập nội dung bài viết...',
                tabsize: 2,
                height: 300,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });

            // --- 2. SCRIPT XEM TRƯỚC ẢNH ---
            const thumbnailFileInput = document.getElementById('thumbnailFile');
            const previewContainer = document.getElementById('previewContainer');
            const imgPreview = document.getElementById('imgPreview');
            const fileInfo = document.getElementById('fileInfo');
            const defaultThumbnail = '/uploads/articles/default-thumbnail.jpg';

            if (thumbnailFileInput) { // Kiểm tra input có tồn tại không
                thumbnailFileInput.addEventListener('change', function () {
                    const file = this.files[0];
                    if (file) {
                        if (file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            previewContainer.style.display = 'block';
                            reader.onload = function (e) {
                                imgPreview.src = e.target.result;
                            }
                            reader.readAsDataURL(file);
                            fileInfo.textContent = `Tệp: ${file.name} (${(file.size / 1024).toFixed(1)} KB)`;
                        } else {
                            this.value = '';
                            previewContainer.style.display = 'none';
                            imgPreview.src = '#';
                            fileInfo.textContent = '';
                            alert('Vui lòng chọn một file ảnh hợp lệ (.jpg, .png, .gif...).');
                        }
                    } else {
                        previewContainer.style.display = 'none';
                        imgPreview.src = '#';
                        fileInfo.textContent = '';
                    }
                });
            }

            if (imgPreview) { // Kiểm tra img có tồn tại không
                 imgPreview.onerror = function () {
                    this.onerror = null;
                    this.src = defaultThumbnail;
                };
            }

        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
