@model IEnumerable<Trang_tin_điện_tử_mvc.Models.Article>

@{
    bool isAuth = User.Identity.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("Author");
    bool isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin");

    // áp dụng layout dựa trên vai trò người dùng, mặc đinh là layout quản trị nếu là Admin hoặc Author
    if (!isAuth) { Layout = "_Layout"; }

    ViewData["Title"] = "Quản lý Bài viết";
}

@* TIÊU ĐỀ VÀ NÚT HÀNH ĐỘNG CHÍNH *@
@if (isAuth) {
    <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-primary fw-bold mb-0">
        <i class="bi bi-newspaper me-2"></i>Quản lý Bài viết
    </h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle-fill me-1"></i> Thêm bài viết mới
    </a>
        <a asp-action="Pending" class="btn btn-outline-warning shadow-sm">
            <i class="bi bi-plus-circle-fill me-1"></i> Danh sách duyệt
        </a>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-primary fw-bold mb-0">
        <i class="bi bi-newspaper me-2"></i>Tất cả Bài viết
    </h1>   
    </div>
}
@* LƯỚI HIỂN THỊ CÁC BÀI VIẾT DẠNG THẺ *@
<div id="articleGridContainer" class="row g-4 article-scroll-container" style="overflow-y: auto;">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 article-card">

                @* HÌNH ẢNH ĐẠI DIỆN *@
                @{
                    var imageUrl = !string.IsNullOrEmpty(item.ThumbnailUrl)
                    ? item.ThumbnailUrl
                    : "/uploads/articles/default-thumbnail.jpg";
                }
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="@imageUrl"
                         class="card-img-top"
                         alt="Thumbnail for @item.Title"
                         style="height: 200px; object-fit: cover;"
                         onerror="this.onerror=null; this.src='/uploads/articles/default-thumbnail.jpg';" />
                </a>

                @* THÂN THẺ *@
                <div class="card-body d-flex flex-column">

                    @* Trạng thái duyệt *@
                    @if (isAuth) {
                        if (item.IsApproved)
                        {
                            <span class="badge bg-success-subtle text-success-emphasis rounded-pill align-self-start mb-2">
                                <i class="bi bi-check-circle-fill me-1"></i> Đã duyệt
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning-subtle text-warning-emphasis rounded-pill align-self-start mb-2">
                                <i class="bi bi-hourglass-split me-1"></i> Chờ duyệt
                            </span>
                        }
                    }

                    @* Tiêu đề (là một link) *@
                    <h5 class="card-title">
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                            @item.Title
                        </a>
                    </h5>

                    @* Tóm tắt (rút gọn) *@
                    <p class="card-text text-muted small flex-grow-1">
                        @{
                            var summary = item.Summary?.Length > 100 ? item.Summary.Substring(0, 100) + "..." : item.Summary;
                        }
                        @summary
                    </p>

                    @* Thông tin tác giả và danh mục *@
                    <div class="d-flex justify-content-between text-muted small mt-2">
                        <span><i class="bi bi-person me-1"></i> @(item.Author?.FullName ?? "N/A")</span>
                        <span><i class="bi bi-folder me-1"></i> @(item.Category?.Name ?? "N/A")</span>
                    </div>
                </div>
                @if (isAdmin)
                {
                    <div class="card-footer bg-white border-0 pt-0 pb-3 d-flex justify-content-end align-items-center gap-2 flex-wrap">

                        @* NÚT DUYỆT HOẶC BỎ DUYỆT *@
                        @if (item.IsApproved)
                        {
                            <form asp-action="Unapprove" asp-controller="Articles" method="post" class="d-inline">
                                @* <<< SỬA LẠI TÊN ACTION *@
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary" title="Bỏ duyệt (Ẩn)">
                                    <i class="bi bi-eye-slash-fill"></i> Ẩn
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Approve" asp-controller="Articles" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success" title="Duyệt ngay">
                                    <i class="bi bi-check-lg"></i> Duyệt
                                </button>
                            </form>
                        }

                        @* CÁC NÚT KHÁC *@
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa">
                                <i class="bi bi-trash-fill"></i>
                            </a>                        
                    </div>
                }
            </div>
        </div>
    }
</div>

@* CSS để thêm hiệu ứng Hover cho Card *@
@section Scripts {
    <style>
        .article-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .article-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .article-scroll-container {
            /* 100vh là chiều cao viewport, trừ đi chiều cao ước tính của navbar và footer/padding */
            /* Điều chỉnh giá trị 180px này cho phù hợp với layout của bạn */
            max-height: calc(100vh - 90px);
            overflow-y: auto; /* Bật thanh cuộn dọc khi tràn */
            /* Tùy chỉnh thanh cuộn (tùy chọn) */
            scrollbar-width: thin;
            scrollbar-color: #ced4da #f8f9fa;
        }

            .article-scroll-container::-webkit-scrollbar {
                width: 8px;
            }

            .article-scroll-container::-webkit-scrollbar-track {
                background: #f8f9fa;
                border-radius: 4px;
            }

            .article-scroll-container::-webkit-scrollbar-thumb {
                background-color: #ced4da;
                border-radius: 4px;
                border: 2px solid #f8f9fa;
            }

                .article-scroll-container::-webkit-scrollbar-thumb:hover {
                    background-color: #adb5bd;
                }
    </style>
}