@model Trang_tin_điện_tử_mvc.Models.Tag

@{
    ViewData["Title"] = "Chỉnh sửa Thẻ";
}

<h1>@ViewData["Title"]</h1>

<h4>Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Thêm input ẩn cho Id *@
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Slug" class="form-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
                <script>
                // Basic slug generation (requires a function like stringToSlug)
                function stringToSlug(str) {
                    str = str.toLowerCase();
                    str = str.normalize('NFD').replace(/[\u0300-\u036f]/g, ''); // Remove accents
                    str = str.replace(/đ/g, 'd');
                    str = str.replace(/[^a-z0-9\s-]/g, ''); // Remove invalid chars
                    str = str.replace(/\s+/g, '-'); // Collapse whitespace and replace by -
                    str = str.replace(/-+/g, '-'); // Collapse dashes
                    str = str.trim();
                    return str;
                }

                $(document).ready(function() {
                    $('#Name').on('keyup blur', function() {
                        var nameVal = $(this).val();
                        $('#Slug').val(stringToSlug(nameVal));
                    });
                });
            </script>
}