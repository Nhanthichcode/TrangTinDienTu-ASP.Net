@model IEnumerable<Trang_tin_điện_tử_mvc.Models.Tag>

@{
    ViewData["Title"] = "Danh sách Thẻ (Tags)";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-primary fw-bold mb-0">
        <i class="bi bi-folder-fill me-2"></i>@ViewData["Title"]
    </h1>
    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-circle-fill me-1"></i> Thêm thẻ mới
    </a>
</div>
@* Hiển thị thông báo (nếu có) *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="table-container">
<table class="table table-striped table-bordered table-hover shadow-sm">
    <thead class="table-dark sticky-top">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1" title="Sửa"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1" title="Chi tiết"><i class="bi bi-info-circle"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>