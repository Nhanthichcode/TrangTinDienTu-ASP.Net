@model List<Trang_tin_điện_tử_mvc.Models.ApplicationUser>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-primary fw-bold mb-0">
        <i class="bi bi-newspaper me-2"></i>Quản lý Người dùng
    </h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle-fill me-1"></i> Thêm người dùng mới
    </a>
</div>
<div class="table-container">
<table class="table table-striped table-hover">
        <thead class="table-dark sticky-top">
        <tr>
            <th>Ảnh đại diện</th>
            <th>Email</th>
            <th>Họ tên</th>
            <th>Vai trò</th>
            <th>Đã duyệt</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>      
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @{
                        var avatarPath = user.AvatarUrl ?? "/uploads/avatars/default-images.png"; // Cung cấp ảnh mặc định
                    }
                    <img src="@avatarPath" alt="Avatar" class="rounded-circle" width="50" height="50"
                         onerror="this.onerror=null; this.src='/uploads/avatars/default-images.png';" />
                </td>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>@ViewBag.UserRoles[user.Id]</td>
                <td>
                    @if (user.IsApproved)
                    {
                        <span class="badge bg-success m-1">Đang hoạt động</span>
                        @* Người dùng đang Hoạt động -> Hiển thị nút để Khóa (màu đỏ) *@
                        <form asp-action="Unapprove" asp-controller="Users" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Khóa tài khoản này">
                                @* Đổi thành màu đỏ *@
                                <i class="bi bi-lock-fill"></i> @* Đổi icon thành ổ khóa *@
                                Khóa
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-danger me-2">Đã khóa</span>
                        @* Người dùng đang bị Khóa -> Hiển thị nút để Kích hoạt (màu xanh lá) *@
                        <form asp-action="Approve" asp-controller="Users" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-success" title="Kích hoạt tài khoản này">
                                @* Giữ màu xanh lá *@
                                <i class="bi bi-unlock-fill"></i> @* Đổi icon thành mở khóa *@
                                Kích hoạt @* Đổi chữ thành Kích hoạt cho rõ nghĩa *@
                            </button>
                        </form>
                    }
                </td>
               
                <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@user.Id"><i class="bi bi-pencil-square me-1"></i>Chỉnh sửa</a>
                    <form method="post" asp-action="Delete" asp-route-id="@user.Id" class="d-inline">
                        @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-danger"><i class="bi bi-trash-fill me-1"></i>Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>