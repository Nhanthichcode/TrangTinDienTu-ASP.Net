@model Trang_tin_điện_tử_mvc.Models.ApplicationUser
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<h2>Chỉnh sửa người dùng</h2>
<hr />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="mb-3">
        <label>Email</label>
        <input class="form-control" value="@Model.Email" disabled />
    </div>

    <div class="mb-3">
        <label>Họ tên</label>
        <input name="fullName" class="form-control" value="@Model.FullName" />
    </div>

    <div class="mb-3">
        <label>Vai trò</label>
        <select name="role" class="form-select">
            @foreach (var role in (IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>)ViewBag.Roles)
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>

    <div class="form-check mb-3">
        <input name="isApproved" class="form-check-input" type="checkbox" value="true" @(Model.IsApproved ? "checked" : "") />
        <label class="form-check-label">Đã duyệt</label>
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
</form>
