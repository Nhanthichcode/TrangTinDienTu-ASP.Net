@model Trang_tin_điện_tử_mvc.Models.UserEditViewModel
@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    var defaultAvatar = "/uploads/avatars/default-images.png";

    // --- LOGIC PHÂN QUYỀN ---
    var currentUser = await UserManager.GetUserAsync(User); 
    bool isAdmin = currentUser != null && await UserManager.IsInRoleAsync(currentUser, "Admin");
    // bool isOwner = currentUser != null && currentUser.Id == Model.Id;
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h2 class="mb-0 h4 text-primary">
                    <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa người dùng: @Model.UserName
                </h2>
            </div>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger m-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserName" />
                <input type="hidden" asp-for="ExistingAvatarUrl" />

                <div class="card-body p-4">
                    <div class="row g-4">
                        
                        @* --- CỘT BÊN TRÁI (AVATAR) --- *@
                        <div class="col-md-4 text-center">
                            <label class="form-label fw-bold">Ảnh đại diện</label>

                            <img id="avatarPreview"
                                 src="@(!string.IsNullOrEmpty(Model.ExistingAvatarUrl) ? Model.ExistingAvatarUrl : defaultAvatar)"
                                 alt="Xem trước Avatar" class="img-thumbnail rounded-circle mb-2"
                                 style="width: 150px; height: 150px; object-fit: cover;"
                                 onerror="this.onerror=null; this.src='@defaultAvatar';" />

                            <div class="mb-3">
                                <label asp-for="AvatarFile" class="form-label small text-muted">Chọn ảnh mới để thay thế</label>
                                <input asp-for="AvatarFile" class="form-control form-control-sm" type="file" id="avatarFile" accept="image/*" />
                                <span asp-validation-for="AvatarFile" class="text-danger small"></span>
                            </div>
                        </div>

                        @* --- CỘT BÊN PHẢI (THÔNG TIN) --- *@
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-bold"></label>                             
                                <input asp-for="Email" class="form-control" placeholder="example@domain.com" readonly="@(!isAdmin)" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label fw-bold"></label>
                                <input asp-for="FullName" class="form-control" placeholder="Nguyễn Văn A" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            @* --- KHU VỰC CHỈ ADMIN MỚI THẤY --- *@
                            @if (isAdmin)
                            {
                                <hr class="my-3">
                                <h5 class="text-danger fw-bold">Khu vực Quản trị</h5>
                                
                                <div class="mb-3">
                                    <label asp-for="SelectedRole" class="form-label fw-bold"></label>
                                    <select asp-for="SelectedRole" class="form-select" asp-items="Model.RolesList">
                                        <option value="">-- Không gán vai trò --</option>
                                    </select>
                                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                                </div>

                                <div class="form-check form-switch mb-4">
                                    <input class="form-check-input" asp-for="IsApproved" />
                                    <label class="form-check-label" asp-for="IsApproved"></label>
                                </div>
                            }
                            @* --- KẾT THÚC KHU VỰC ADMIN --- *@
                        </div>
                    </div>
                </div>

                @* --- FOOTER CỦA CARD (NÚT BẤM) --- *@
                <div class="card-footer bg-light border-0 p-3">
                    <div class="d-flex justify-content-between">
                        @* Nút Quay lại: Admin về Users/Index, User thường về Home/Index *@
                        @if (isAdmin)
                        {
                            <a asp-action="Index" asp-controller="Users" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách User
                            </a>
                        }
                        else
                        {
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Quay lại Trang chủ
                            </a>
                        }
                        
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save me-1"></i> Lưu thay đổi
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    
    @* SCRIPT XEM TRƯỚC AVATAR (Giữ nguyên) *@
     <script>
        const avatarFileInput = document.getElementById('avatarFile');
        const avatarPreview = document.getElementById('avatarPreview');
        const defaultAvatar = '@defaultAvatar'; // Lấy đường dẫn mặc định từ C#

         avatarFileInput.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function (e) { avatarPreview.src = e.target.result; }
                    reader.readAsDataURL(file);
                } else {
                     this.value = '';
                     avatarPreview.src = defaultAvatar;
                     alert('Vui lòng chọn một file ảnh hợp lệ.');
                }
            } else {
                 avatarPreview.src = '@(!string.IsNullOrEmpty(Model.ExistingAvatarUrl) ? Model.ExistingAvatarUrl : defaultAvatar)';
            }
        });

         avatarPreview.onerror = function () {
             this.onerror = null;
             this.src = defaultAvatar;
         };
    </script>
}