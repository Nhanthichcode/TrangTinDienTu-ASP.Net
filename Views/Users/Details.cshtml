@model Trang_tin_điện_tử_mvc.Models.ApplicationUser
@using Microsoft.AspNetCore.Identity
@using Trang_tin_điện_tử_mvc.Models @* Thêm namespace để nhận diện Article *@

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Chi tiết người dùng";
    var defaultAvatar = "/uploads/avatars/default-images.png";
    var userRole = ViewBag.UserRole as string;

    // Lấy danh sách bài viết từ ViewBag (có thể null nếu không phải Author)
    var authorArticles = ViewBag.AuthorArticles as List<Article>;

    // Logic phân quyền
    var currentUser = await UserManager.GetUserAsync(User);
    bool isUserLoggedIn = currentUser != null;
    bool isAdmin = isUserLoggedIn && await UserManager.IsInRoleAsync(currentUser, "Admin");
    bool isOwner = isUserLoggedIn && currentUser.Id == Model.Id;
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">

        @* --- PHẦN 1: THÔNG TIN CÁ NHÂN (Giữ nguyên) --- *@
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h2 class="mb-0 h4 text-primary">
                    <i class="bi bi-person-badge-fill me-2"></i>Chi tiết người dùng: @Model.UserName
                </h2>
            </div>

            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-4 text-center">
                        <label class="form-label fw-bold d-block">Ảnh đại diện</label>
                        <img id="avatarPreview"
                             src="@(!string.IsNullOrEmpty(Model.AvatarUrl) ? Model.AvatarUrl : defaultAvatar)"
                             alt="Avatar" class="img-thumbnail rounded-circle mb-2"
                             style="width: 150px; height: 150px; object-fit: cover;"
                             onerror="this.onerror=null; this.src='@defaultAvatar';" />
                    </div>

                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4 fw-bold">Email:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                            <dt class="col-sm-4 fw-bold">Họ và Tên:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                            <dt class="col-sm-4 fw-bold">Ngày sinh:</dt>
                            <dd class="col-sm-8">
                                @(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd/MM/yyyy") : Html.Raw("<span class='text-muted'>Chưa cập nhật</span>"))
                            </dd>

                            @if (isAdmin)
                            {
                                <dt class="col-sm-4 fw-bold">Vai trò:</dt>
                                <dd class="col-sm-8"><span class="badge bg-info text-dark">@userRole</span></dd>

                                <dt class="col-sm-4 fw-bold">Trạng thái:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsApproved)
                                    {
                                        <span class="badge bg-success">Đã kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Đã khóa</span>
                                    }
                                </dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light border-0 p-3">
                <div class="d-flex justify-content-between">
                    @if (isAdmin)
                    {
                        <a asp-action="Index" asp-controller="Users" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i> Quay lại Danh sách người dùng</a>
                    }
                    else
                    {
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i> Quay lại Trang chủ</a>
                    }

                    @if (isAdmin || isOwner)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil-square me-1"></i> Chỉnh sửa</a>
                    }
                </div>
            </div>
        </div>

        @* --- PHẦN 2: DANH SÁCH BÀI VIẾT (Chỉ hiện nếu có bài viết) --- *@
        @if (authorArticles != null && authorArticles.Any())
        {
<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom">
        <h4 class="mb-0 text-secondary">
            <i class="bi bi-journal-text me-2"></i>Bài viết của tác giả (@authorArticles.Count)
        </h4>
    </div>
                <div style="max-height: 350px;
                        overflow-y: auto; overflow-x: hidden;" >
        <div class="list-group list-group-flush">
            @foreach (var article in authorArticles)
            {
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id" class="list-group-item list-group-item-action p-3">
                    <div class="d-flex w-100 justify-content-between align-items-center mb-1">
                        <h6 class="mb-0 fw-bold text-primary">@article.Title</h6>
                        <small class="text-muted ms-2">@article.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </div>
                    <p class="mb-1 text-muted small text-truncate">@article.Summary</p>
                    <div class="mt-2">
                                    <span class="badge text-dark bg-success-subtle text-success-emphasis border border-success-subtle">
                                       Đã duyệt
                                    </span>

                                    <span class="text-warning badge bg-secondary-subtle text-secondary-emphasis ms-1 d-inline-flex align-items-center">
                                        <i class="bi bi-eye me-1"></i> @article.ViewCount
                                    </span>
                                </div>
                </a>
            }
        </div>
    </div>
</div>
        }

    </div>
</div>
