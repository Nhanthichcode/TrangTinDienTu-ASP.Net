@inject SignInManager<ApplicationUser> SignInManager
@{
    // Kiểm tra xem có dịch vụ đăng nhập bên ngoài nào được cấu hình không (ví dụ: Google, Facebook)
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

@* Danh sách điều hướng dạng pills (viên thuốc), xếp theo chiều dọc.
    Các class 'nav-pills' và 'flex-column' là của Bootstrap để tạo kiểu.
*@
<ul class="nav nav-pills flex-column">

    @* Link đến trang Thông tin cá nhân (Index) *@
    <li class="nav-item">
        @* - asp-page="./Index": Tag Helper trỏ đến trang Razor Page 'Index' trong cùng thư mục.
        - @ManageNavPages.IndexNavClass(ViewContext): Gọi phương thức helper để thêm class 'active' nếu đây là trang hiện tại.
        *@
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Thông tin cá nhân</a>
    </li>

    @* Link đến trang Email *@
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a>
    </li>

    @* Link đến trang Đổi mật khẩu *@
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Đổi mật khẩu</a>
    </li>

    @* Chỉ hiển thị mục này nếu có cấu hình đăng nhập bên ngoài *@
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">Liên kết tài khoản ngoài</a>
        </li>
    }

    @* Link đến trang Xác thực hai yếu tố (2FA) *@
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Xác thực hai yếu tố</a>
    </li>

    @* Link đến trang Dữ liệu cá nhân (GDPR) *@
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Dữ liệu cá nhân</a>
    </li>
</ul>