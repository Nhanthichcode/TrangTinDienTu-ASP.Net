@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Dashboard tác giả";
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>@ViewData["Title"]</h2>
<p>@ViewBag.Message</p>

<div class="row">
    <div class="col-md-6">
        <a asp-controller="Articles" asp-area="" asp-action="Index" class="btn btn-primary w-100 mb-3">
            <i class="bi bi-pencil-square"></i> Bài viết của tôi
        </a>
        <a asp-controller="Articles" asp-area="" asp-action="Create" class="btn btn-success w-100">
            <i class="bi bi-file-earmark-plus"></i> Tạo bài viết mới
        </a>
    </div>
</div>
